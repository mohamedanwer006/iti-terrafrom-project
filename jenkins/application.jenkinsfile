pipeline {
     agent {
        label 'deploy'
    }

    stages {

        stage('Chectout') {
            steps {
                echo '#----------------Checkout SCM------------------#'
                git branch: 'rds_redis', changelog: false, poll: false, url: 'https://github.com/mohamedanwer006/jenkins_nodejs_example.git'
                sh 'ls'
            }
        }

        stage('Docker-Build') {
            steps {
                 echo '#----------------Build Image------------------#'
                sh 'docker build -t mohameddev006/iti-node-app:latest -f dockerfile .'

            }
        }
        
         stage('Push-Artifact') {
            steps {
                echo '#----------------Login to Docker hub and push image------------------#'
                           withCredentials([usernamePassword(credentialsId: 'docker', usernameVariable: 'USERNAME', passwordVariable: 'PASSWORD')]) {
                     sh "docker login -u ${USERNAME} -p ${PASSWORD}"
                     sh "docker push mohameddev006/iti-node-app:latest"
                     
                }
            }
        }

        stage('deploy') {
            steps {
               
                echo '#==================Deploy application====================#'
                sh "docker run -d -e REDIS_HOSTNAME=iti-elasticache-cluster.lhrqtl.0001.use1.cache.amazonaws.com -e REDIS_PORT=6379 -e RDS_HOSTNAME=20220803121034733600000001.cwcbyztycuua.us-east-1.rds.amazonaws.com -e RDS_USERNAME=user1 -e RDS_PASSWORD=password -e RDS_PORT=3306 -p 3000:3000 mohameddev006/iti-node-app:latest"
   
            }
        }
    }
}


